{
	// Place your snippets for javascript here. Each snippet is defined under a snippet name and has a prefix, body and
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
	// same ids are connected.
	"setTimeout": {
		"prefix": "setTimeout",
		"body": [
			"setTimeout(() => {",
			"\t$1",
			"}, $2);",
			"$0"
		],
		"description": "Set a timeout"
	},
	"setImmediate": {
		"prefix": "setImmediate",
		"body": [
			"setImmediate(() => {",
			"\t$1",
			"});",
			"$0"
		],
		"description": "Execute code immediately"
	},
	"Script.nextTick": {
		"prefix": "Script.nextTick",
		"body": [
			"Script.nextTick(() => {",
			"\t$1",
			"});",
			"$0"
		],
		"description": "Execute code on the next tick of the event loop"
	},
	"wrapInPromise": {
		"prefix": "wrapInPromise",
		"body": [
			"return new Promise((resolve, reject) => {",
			"\t$TM_SELECTED_TEXT",
			"});"
		],
		"description": "Wrap selected code in a Promise"
	}
}
